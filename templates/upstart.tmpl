# {{= it.app}} node %i
description "{{= it.description}}"

start on started network-services
stop on stopping network-services
respawn
setuid ubuntu
setgid ubuntu
limit nofile 1000000 1000000

limit core unlimited unlimited

script
    cd {{=it.deploydir}}
    {{= it.env}} {{= it.start}} \
    {{= it.args}} {{= it.argv}} >> logs/{{= it.app}}%i.log 2>&1
end script
